//you have to add first set of array with 2nd set of array like --> [3*1, 5*0, 2*1, 4, 5]

const input = [3, 5, 2] 
const input2 = [1, 0, 1, 4, 5]

if(input.length > input2.length) {
    multipleArray(input, input2)
} else {
    multipleArray(input2, input)
}

function multipleArray (arr1, arr2) {
    arr1.forEach((item, index) => {
        if(arr2[index]) {
            arr1[index] =arr2[index] + item
        }
    })
    console.log(JSON.stringify(arr1));
}
